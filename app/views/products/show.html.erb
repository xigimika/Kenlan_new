
<body>
<div class="">
	<div class="center-block clearfix show_box" style="padding: 0px; border-left-width: 2px; margin: 105px 15px 15px;">
		<h4>カテゴリー：<%= @product.category %>
					  <%= @product.category_detail %>&emsp;
					  <%= @product.category_2 %>
					  <%= @product.category_detail_2 %>&emsp;
					  <%= @product.category_ent %></h4>
		<div class="col-xs-5 image_ad" style="text-align: center;">
			<%= attachment_image_tag @product, :ad_image,  fallback: "no-image.jpg", class: "image_gazou" %>
			<h4 style="text-align: left;">URL：
				<a><%= link_to 'ウェブサイトへ',@product.url %></a>
			</h4>
			<!-- 企業名 -->
			<h4 style="text-align: left;">
				<%= @product.company_name %>
			</h4>
		</div>
		<div class="col-xs-7">
			<div class="">
				<h3><%= @product.ad_name %></h3>
				<div class="in_show">
					<h4><%= simple_format(@product.ad_show_text) %></h4>
				</div>
			</div>
			<br>
			<div>
				<p style="text-align: right;">更新日時：<%= @product.created_at.strftime("%Y-%m-%d") %></p>
			</div>

		</div>
	</div>
</div>
</body>
