<h2 style="text-align: center;margin-top: 8%"><b>ログイン画面</b></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>


<table border="" class="table_t">

  <tr>
    <th class="login_th">
      表示名：&emsp;
    </th>
    <td class="login_td">
      <%= f.text_field :pic_name, autofocus: true, autocomplete: "pic_name", class: "login_box" %>
  </tr>

  <tr>
    <th class="login_th">
      会社名：&emsp;
    </th>
    <td class="login_td">
      <%= f.text_field :company_name, autofocus: true, autocomplete: "company_name", class: "login_box" %>
    </td>
  </div>

  <tr>
    <th class="login_th">
      メールアドレス：&emsp;
    </th>
    <td class="login_td">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "login_box" %>
    </td>
  </tr>

  <tr>
    <th class="login_th">
      パスワード：&emsp;
    </th>
    <td class="login_td">
        <%= f.password_field :password, autocomplete: "off", class: "login_box" %>
      </td>
    </tr>

</table>
<table>
    <% if devise_mapping.rememberable? -%>
      <div class="field" style="text-align: center;font-size: 17px; margin-top: 1%;">
          <%= f.check_box :remember_me %>
          <%= f.label :次回からメールアドレスの入力を省略する %>
      </div>

  <% end %>
</table>


<table class="">
    <%= f.submit "ログイン", class: "btn btn-success", style: "font-size:20px; padding: 8px 50px; margin-left: 43%;margin-top: 1%;" %>
</table>
<% end %>

