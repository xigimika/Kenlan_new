<head>
	<meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<p class="show_mini_top"></p>
<h1 class="user_index_top">TOP</h1>
<hr>

<span class="user_date_edit_pc">
<%= link_to "ユーザー情報の確認・編集はこちら", edit_user_registration_path, class: "btn btn-warning", style: "color:black;font-size: 20px; margin-left: 38%; padding: 23px 8px;" %>
</span>

                    

<span class="user_date_edit_mini">
<%= link_to "ユーザー情報の確認・編集はこちら", edit_user_registration_path, class: "btn btn-warning", style: "color:black;font-size: 16px; margin-left: 29%; padding: 12px 4px;" %>
</span>

                                 

<span class="user_index_pc">
<div class="center-block clearfix" style="padding: 15px;">
	<div class="row">
		<div class="col-xs-12">
			<h2 class="ichiran">商品情報
			<%= link_to "新規登録", new_product_path, class: "btn btn-large btn-info", style: "color:maroon; padding: 8px 23px; font-size: 17px; margin-left: 67%;" %></h2>
				<table class="table table-hover">


				<%= search_form_for @u, url: user_search_path do |f| %>
				<p>
		          <label style="margin-bottom: 0px; padding-top: 0px;margin-left: 10px;"><%= f.search_field :ad_name_or_company_name_cont,size:45 ,style:"width: 78%; height:32px;" %>
		          <!-- <input id="submit_button" type="submit" class="" name="submit" value="検　索" style="margin-bottom: 4px;"> -->
		          <%= submit_tag '検索', class: 'btn btn-primary' %>

		      </label>
		        </p>
    			<% end %>
    			<thead>
					<tr>
						<td><h4>タイトル</h4></td>
						<td></td>
						<td><h4>URL</h4></td>
						<td></td>
						<td></td>
					</tr>
				</thead>

				<tbody>
					<% if @results.presence %>
						<% @results.each do |t| %>
						<tr>
							<td><h4><%= t.ad_name %></h4></td>
							<td><%= attachment_image_tag t, :ad_image, fallback: "no-image.jpg", class: "image_size" %></td>
							<td><h4 class="url_long"><%= t.url %></h4></td>
							<td>
								<%=link_to "編集画面へ", edit_product_path(t.id) , class: "btn btn-success", style: "color:black;" %>
							</td>
							<td><%=link_to "商品を削除する", product_path(t.id), method: :delete, data: {confirm: "本当に削除しますか？"} , class: "btn btn-danger" %></td>
						</tr>
					<% end %>
					<tr><td><%= paginate @results, class: "pagenate" %></td></tr>

					<% elsif @products.blank? %>
					<h2>&emsp;&emsp;＊検索結果はありません</h2>

					<% else %>

					<% @products.each do |t| %>
						<tr>
							<td><h4><%= t.ad_name %></h4></td>
							<td><%= attachment_image_tag t, :ad_image, fallback: "no-image.jpg", class: "image_size" %></td>
							<td><h4 class="url_long"><%= t.url %></h4></td>
							<td>
								<%=link_to "編集画面へ", edit_product_path(t.id) , class: "btn btn-success", style: "color:black;" %>
							</td>
							<td>
								<%=link_to "詳細画面へ", product_path(t.id), class: "btn btn-warning", style: "color:black;" %>
							</td>
							<td><%=link_to "商品を削除する", user_path(t.id), method: :delete, data: {confirm: "本当に削除しますか？"} , class: "btn btn-danger" %></td>
						</tr>
					<% end %>
				</tbody>
				<tfoot>
					<tr><td><%= paginate @products, class: "pagenate" %></td></tr>
					<% end %>
				</tfoot>

				</table>
		</div>
	</div>
</div>
</span>
                            

