<h1 style="margin:30px 0px 15px 0px;text-align: center;">投稿一覧</h1>


<table class="table table-striped" style="width: 90%;margin-left: 6%;">
	<thead style="text-align: center;">
		<tr>
			<td></td>
			<td><h4>タイトル</h4></td>
			<td><h4>ジャンル</h4></td>
			<td><h4>更新日</h4></td>
			<td></td>
		</tr>
	</thead>

	<tbody>
		<% @freepages.each do |t| %>
		<tr style="text-align: center;">
			<td style="width: 3%;padding: 15px 0px 0px 0px;font-size: 17px;"></td>
			<td style="width: 40%;overflow-x: scroll;">
				<h4><%= t.title %></h4>
			</td>
			<td style="width: 20%;">
				<h4><%= t.genre %></h4>
			</td>
			<td style="width: 20%;">
				<h4><%= t.created_at.strftime("%Y-%m-%d %H:%M:%S") %></h4>
			</td>
			<td style="width: 10%;text-align: left;">
				<%=link_to "SHOW", freepage_path(t.id) , class: "btn btn-primary" %>
			</td>
		</tr>
		<% end %>

	</tbody>
</table>


<%= paginate @freepages, class: "pagenate" %>

